#!/usr/bin/env bash
#
# Starts Structurizr Lite web server
# 
# Usage: bin/lite
#
# This script launches the Structurizr Lite server which provides a web UI for
# viewing and editing your architecture diagrams.

WORKSPACE_DIR="$(realpath "$(dirname "$0")/..")"
devcontainer up --workspace-folder "$WORKSPACE_DIR" 
